<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.noahpay.pay.commons.db.channel.mapper.ChannelSupportBankMapper">

    <!-- @kalvan-tools.generated -->
    <resultMap id="BaseResultMap" type="com.noahpay.pay.commons.db.channel.model.ChannelSupportBank">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="channel_no" jdbcType="INTEGER" property="channelNo"/>
        <result column="pay_type" jdbcType="TINYINT" property="payType"/>
        <result column="limit_min_amount" jdbcType="BIGINT" property="limitMinAmount"/>
        <result column="limit_max_amount" jdbcType="BIGINT" property="limitMaxAmount"/>
        <result column="begin_time" jdbcType="VARCHAR" property="beginTime"/>
        <result column="end_time" jdbcType="VARCHAR" property="endTime"/>
        <result column="bank_account_type" jdbcType="TINYINT" property="bankAccountType"/>
        <result column="bank_type_group" jdbcType="VARCHAR" property="bankTypeGroup"/>
        <result column="bank_city_group" jdbcType="VARCHAR" property="bankCityGroup"/>
        <result column="bank_support" jdbcType="TINYINT" property="bankSupport"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="state" jdbcType="TINYINT" property="state"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <sql id="selectAllField">
        SELECT t.id
             , t.channel_no
             , t.pay_type
             , t.limit_min_amount
             , t.limit_max_amount
             , t.begin_time
             , t.end_time
             , t.bank_account_type
             , t.bank_type_group
             , t.bank_city_group
             , t.bank_support
             , t.remark
             , t.state
             , t.create_time
             , t.update_time
    </sql>

    <sql id="whereCondition">
        FROM channel_support_bank t
        WHERE
        <if test="params.channelNo != null and params.channelNo.trim() != ''">
            t.channel_no = #{params.channelNo} AND
        </if>
        <if test="params.payType != null and params.payType.trim() != ''">
            t.pay_type = #{params.payType} AND
        </if>
        <if test="params.limitMinAmount != null and params.limitMinAmount.trim() != ''">
            t.limit_min_amount <![CDATA[ >= ]]> #{params.limitMinAmount} AND
        </if>
        <if test="params.limitMaxAmount != null and params.limitMaxAmount.trim() != ''">
            t.limit_max_amount <![CDATA[ <= ]]> #{params.limitMaxAmount} AND
        </if>
        <if test="params.beginTime != null and params.beginTime.trim() != ''">
            t.begin_time <![CDATA[ >= ]]> #{params.beginTime} AND
        </if>
        <if test="params.endTime != null and params.endTime.trim() != ''">
            t.end_time <![CDATA[ <= ]]> #{params.endTime} AND
        </if>
        <if test="params.bankAccountType != null and params.bankAccountType.trim() != ''">
            t.bank_account_type = #{params.bankAccountType} AND
        </if>
        <if test="params.bankTypeGroup != null and params.bankTypeGroup.trim() != ''">
            t.bank_type_group LIKE CONCAT(#{params.bankTypeGroup},'%') AND
        </if>
        <if test="params.bankCityGroup != null and params.bankCityGroup.trim() != ''">
            t.bank_city_group LIKE CONCAT(#{params.bankCityGroup},'%') AND
        </if>
        <if test="params.state != null and params.state.trim() != ''">
            t.state = #{params.state} AND
        </if>
        <if test="params.updateTimeBegin != null and params.updateTimeBegin.trim() != ''">
            t.update_time BETWEEN #{params.updateTimeBegin} AND #{params.updateTimeEnd} AND
        </if>
        1=1
    </sql>

    <select id="queryPage" resultMap="BaseResultMap">
        <include refid="selectAllField"/>
        <include refid="whereCondition"/>
        ORDER BY t.id DESC
    </select>


</mapper>