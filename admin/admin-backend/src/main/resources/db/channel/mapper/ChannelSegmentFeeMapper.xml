<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.noahpay.pay.commons.db.channel.mapper.ChannelSegmentFeeMapper">

    <!-- @kalvan-tools.generated -->
    <resultMap id="BaseResultMap" type="com.noahpay.pay.commons.db.channel.model.ChannelSegmentFee">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="fee_segment_rule" jdbcType="VARCHAR" property="feeSegmentRule"/>
        <result column="begin_amount" jdbcType="BIGINT" property="beginAmount"/>
        <result column="end_amount" jdbcType="BIGINT" property="endAmount"/>
        <result column="fee_type" jdbcType="TINYINT" property="feeType"/>
        <result column="fee_rate" jdbcType="BIGINT" property="feeRate"/>
        <result column="fix_fee" jdbcType="BIGINT" property="fixFee"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <sql id="selectAllField">
        SELECT t.id
             , t.fee_segment_rule
             , t.begin_amount
             , t.end_amount
             , t.fee_type
             , t.fee_rate
             , t.fix_fee
             , t.create_time
             , t.update_time
    </sql>

    <sql id="whereCondition">
        FROM channel_segment_fee t
        WHERE
        <if test="params.feeSegmentRule != null and params.feeSegmentRule.trim() != ''">
            t.fee_segment_rule LIKE CONCAT(#{params.feeSegmentRule},'%') AND
        </if>
        <if test="params.beginAmount != null and params.beginAmount.trim() != ''">
            t.begin_amount <![CDATA[ >= ]]> #{params.beginAmount} AND
        </if>
        <if test="params.endAmount != null and params.endAmount.trim() != ''">
            t.end_amount <![CDATA[ <= ]]> #{params.endAmount} AND
        </if>
        <if test="params.feeType != null and params.feeType.trim() != ''">
            t.fee_type = #{params.feeType} AND
        </if>
        <if test="params.updateTimeBegin != null and params.updateTimeBegin.trim() != ''">
            t.update_time BETWEEN #{params.updateTimeBegin} AND #{params.updateTimeEnd} AND
        </if>
        1=1
    </sql>

    <select id="queryPage" resultMap="BaseResultMap">
        <include refid="selectAllField"/>
        <include refid="whereCondition"/>
        ORDER BY t.id DESC
    </select>


</mapper>