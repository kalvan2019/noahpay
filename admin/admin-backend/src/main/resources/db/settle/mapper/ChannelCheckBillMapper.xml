    <resultMap id="BaseResultMap" type="com.noahpay.pay.commons.db.settle.model.ChannelCheckBill">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="channel_no" jdbcType="INTEGER" property="channelNo"/>
        <result column="channel_merchant_no" jdbcType="VARCHAR" property="channelMerchantNo"/>
        <result column="channel_send_sn" jdbcType="VARCHAR" property="channelSendSn"/>
        <result column="channel_recv_sn" jdbcType="VARCHAR" property="channelRecvSn"/>
        <result column="check_type" jdbcType="TINYINT" property="checkType"/>
        <result column="trans_state" jdbcType="TINYINT" property="transState"/>
        <result column="check_state" jdbcType="TINYINT" property="checkState"/>
        <result column="check_date" jdbcType="INTEGER" property="checkDate"/>
        <result column="trans_time" jdbcType="VARCHAR" property="transTime"/>
        <result column="order_amount" jdbcType="BIGINT" property="orderAmount"/>
        <result column="channel_fee" jdbcType="BIGINT" property="channelFee"/>
        <result column="bank_account_no" jdbcType="VARCHAR" property="bankAccountNo"/>
        <result column="bank_account_name" jdbcType="VARCHAR" property="bankAccountName"/>
        <result column="org_channel_send_sn" jdbcType="VARCHAR" property="orgChannelSendSn"/>
        <result column="org_order_amount" jdbcType="BIGINT" property="orgOrderAmount"/>
