    </resultMap>

    <sql id="selectAllField">
        SELECT t.id
             , t.channel_no
             , t.channel_merchant_no
             , t.channel_send_sn
             , t.channel_recv_sn
             , t.check_type
             , t.trans_state
             , t.check_state
             , t.check_date
             , t.trans_time
             , t.order_amount
             , t.channel_fee
             , t.bank_account_no
             , t.bank_account_name
             , t.org_channel_send_sn
             , t.org_order_amount
             , t.org_channel_fee
             , t.create_time
             , t.update_time
    </sql>

    <sql id="whereCondition">
        FROM channel_check_bill t
        WHERE
        <if test="params.channelNo != null and params.channelNo.trim() != ''">
            t.channel_no = #{params.channelNo} AND
        </if>
        <if test="params.channelMerchantNo != null and params.channelMerchantNo.trim() != ''">
            t.channel_merchant_no = #{params.channelMerchantNo} AND
        </if>
        <if test="params.checkType != null and params.checkType.trim() != ''">
            t.check_type = #{params.checkType} AND
        </if>
        <if test="params.transState != null and params.transState.trim() != ''">
            t.trans_state = #{params.transState} AND
        </if>
        <if test="params.checkState != null and params.checkState.trim() != ''">
            t.check_state = #{params.checkState} AND
        </if>
        <if test="params.checkDate != null and params.checkDate.trim() != ''">
            t.check_date = #{params.checkDate} AND
        </if>
        <if test="params.updateTimeBegin != null and params.updateTimeBegin.trim() != ''">
            t.update_time BETWEEN #{params.updateTimeBegin} AND #{params.updateTimeEnd} AND
        </if>
        1=1
    </sql>

    <select id="queryPage" resultMap="BaseResultMap">
        <include refid="selectAllField"/>
        <include refid="whereCondition"/>
        ORDER BY t.id DESC
    </select>


</mapper>