<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.noahpay.pay.commons.db.platform.mapper.GatewayAuthorizeMapper">

    <!-- @kalvan-tools.generated -->
    <resultMap id="BaseResultMap" type="com.noahpay.pay.commons.db.platform.model.GatewayAuthorize">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="app_id" jdbcType="VARCHAR" property="appId"/>
        <result column="service" jdbcType="VARCHAR" property="service"/>
        <result column="state" jdbcType="TINYINT" property="state"/>
        <result column="max_access" jdbcType="INTEGER" property="maxAccess"/>
        <result column="times" jdbcType="INTEGER" property="times"/>
       <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <sql id="selectAllField">
        SELECT
            t.id,
            t.app_id,
            t.service,
            t.state,
            t.max_access,
            t.times,
            t.create_time,
            t.update_time,
            1
    </sql>

    <sql id="whereCondition">
        FROM gateway_authorize t
        WHERE 1=1
        <if test="params.appId != null and params.appId.trim() != ''">
            AND t.app_id LIKE CONCAT(#{params.appId},'%')
        </if>
        <if test="params.service != null and params.service.trim() != ''">
            AND t.service LIKE CONCAT(#{params.service},'%')
        </if>
        <if test="params.state != null and params.state.trim() != ''">
            AND t.state = #{params.state}
        </if>
        <if test="params.maxAccessBegin != null and params.maxAccessBegin.trim() != ''">
            AND t.max_access BETWEEN #{params.maxAccessBegin} AND #{params.maxAccessEnd}
        </if>
        <if test="params.timesBegin != null and params.timesBegin.trim() != ''">
            AND t.times BETWEEN #{params.timesBegin} AND #{params.timesEnd}
        </if>
        <if test="params.auditState != null and params.auditState.trim() != '' and params.auditState == 1">
            AND t.audit_state != 0
        </if>
        <if test="params.auditState != null and params.auditState.trim() != '' and params.auditState != 1">
            AND t.audit_state = #{params.auditState}
        </if>
    </sql>

    <select id="queryPage" resultMap="BaseResultMap">
        <include refid="selectAllField"/>
        <include refid="whereCondition"/>
        ORDER BY t.id DESC
    </select>


</mapper>