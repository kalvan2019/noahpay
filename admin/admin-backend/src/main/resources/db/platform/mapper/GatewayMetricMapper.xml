<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.noahpay.pay.commons.db.platform.mapper.GatewayMetricMapper">

    <!-- @kalvan-tools.generated -->
    <resultMap id="BaseResultMap" type="com.noahpay.pay.commons.db.platform.model.GatewayMetric">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="report_date" jdbcType="INTEGER" property="reportDate"/>
        <result column="app_id" jdbcType="VARCHAR" property="appId"/>
        <result column="service" jdbcType="VARCHAR" property="service"/>
        <result column="pass_qps" jdbcType="INTEGER" property="passQps"/>
        <result column="block_qps" jdbcType="INTEGER" property="blockQps"/>
        <result column="success_qps" jdbcType="INTEGER" property="successQps"/>
        <result column="exception_qps" jdbcType="INTEGER" property="exceptionQps"/>
        <result column="rt" jdbcType="BIGINT" property="rt"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <sql id="selectAllField">
        SELECT
            t.id,
            t.report_date,
            t.app_id,
            t.service,
            t.pass_qps,
            t.block_qps,
            t.success_qps,
            t.exception_qps,
            t.rt,
            t.create_time,
            t.update_time,
            1
    </sql>

    <sql id="whereCondition">
        FROM gateway_metric t
        WHERE 1=1
        <if test="params.reportDateBegin != null and params.reportDateBegin.trim() != ''">
            AND t.report_date BETWEEN #{params.reportDateBegin} AND #{params.reportDateEnd}
        </if>
        <if test="params.appId != null and params.appId.trim() != ''">
            AND t.app_id LIKE CONCAT(#{params.appId},'%')
        </if>
        <if test="params.service != null and params.service.trim() != ''">
            AND t.service LIKE CONCAT(#{params.service},'%')
        </if>
    </sql>

    <select id="queryPage" resultMap="BaseResultMap">
        <include refid="selectAllField"/>
        <include refid="whereCondition"/>
        ORDER BY t.id DESC
    </select>


</mapper>